source 'https://rubygems.org'

# Install omnibus software
group :omnibus do
  gem "omnibus", github: ENV.fetch("OMNIBUS_GITHUB_REPO", "chef/omnibus"), branch: ENV.fetch("OMNIBUS_GITHUB_BRANCH", "main")
  gem "omnibus-software", github: ENV.fetch("OMNIBUS_SOFTWARE_GITHUB_REPO", "chef/omnibus-software"), branch: ENV.fetch("OMNIBUS_SOFTWARE_GITHUB_BRANCH", "lbaker/upgrade-erlang-24.2")
  gem 'artifactory'
end

group :test do
  gem 'test-kitchen' # for Test Kitchen testing of the omnibus builds
  gem 'berkshelf' # depsolving the Test Kitchen suite
  gem 'rake'
end
